<%- layout("/layouts/boilerplate") %>
<div id="filters-container">
  <!-- Scrollable Icons -->
  <div id="filters">
    <div class="filter">
      <a href=""><i data-name="Trending" class="fa-solid fa-fire"></i></a>
      <p>Trending</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Rooms" class="fa-solid fa-bed"></i></a>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <a href=""
        ><i data-name="Iconic-Cities" class="fa-solid fa-mountain-city"></i
      ></a>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Mountains" class="fa-solid fa-mountain"></i></a>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <a href=""
        ><i data-name="Castles" class="fa-solid fa-fort-awesome"></i
      ></a>
      <p>Castles</p>
    </div>
    <div class="filter">
      <a href=""
        ><i data-name="Amazing-Pools" class="fa-solid fa-person-swimming"></i
      ></a>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Camping" class="fa-solid fa-campground"></i></a>
      <p>Camping</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Farms" class="fa-solid fa-cow"></i></a>
      <p>Farms</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Arctic" class="fa-solid fa-snowflake"></i></a>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Domes" class="fa-solid fa-igloo"></i></a>
      <p>Domes</p>
    </div>
    <div class="filter">
      <a href=""><i data-name="Boats" class="fa-solid fa-ship"></i></a>
      <p>Boats</p>
    </div>
  </div>

  <!-- Tax Toggle - Fixed on the right side -->
  <div class="tax-toggle-container">
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
</div>

<div class="row mt-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a href="/listings/ <%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b>
          <br />
          &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
          "N/A" %>/ night

          <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
